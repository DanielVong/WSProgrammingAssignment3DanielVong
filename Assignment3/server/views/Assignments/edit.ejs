<%- include ../partials/header.ejs %>
<!--Table with form elements to edit an existing object-->
<!--value element makes the existing info on the object appear in the textbox for easy access-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title%></h1>

            <form class="form" method="post">
                <div class="form-group">
                    <label for="courseTextField">Course</label>
                    <input type="text" class="form-control"
                    id="courseTextField"
                    placeholder="Enter the Course name"
                    name="course" 
                    
                    value="<%= Assignment.course%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the assignment name"
                    name="name" 
                    value="<%= Assignment.name%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="weightTextField">Assignment weight</label>
                    <input type="text" class="form-control"
                    id="weightTextField"
                    placeholder="Enter the weight of assignment"
                    name="weight" 
                    value="<%= Assignment.weight%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="dueTextField">Due Date</label>
                    <input type="text" class="form-control"
                    id="dueTextField"
                    placeholder="Enter the due date"
                    name="due" 
                    value="<%= Assignment.due%>"
                    required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/assignments" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>

            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs %>